{
    "name": "mydnic/chatter",
    "description": "A simple forum package for your laravel app",
    "authors": [
        {
            "name": "Tony Lea",
            "email": "tony@devdojo.com"
        }
    ],
    "require": {
        "mews/purifier": "2.1.*",
        "laravel/scout": "^7.1"
    },
    "require-dev": {
        "illuminate/cache": "*",
        "illuminate/console": "*"
    },
    "autoload": {
	    "psr-4": {
	      "DevDojo\\Chatter\\": "/src"
		}
	},
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "DevDojo\\Chatter\\ChatterServiceProvider"
            ]
        }
    }
}
